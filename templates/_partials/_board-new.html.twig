<div class="popup popup-register">
    <div class="popup-close">
        <i class="fas fa-times"></i>
    </div>
    <h1 class="form-title">Założ konto</h1>
    <form action="{{ path('register') }}">

        <div class="form__wrap">
            <div class="form__label ">
                Email
            </div>
            <div class="form__error create__post-error--switch create__post-error--url"></div>
            <input class="form__text-secondary" name="email" type="text"/>
        </div>

        <div class="form__wrap">
            <div class="form__label ">
                Nazwa użytkownika
            </div>
            <div class="form__error create__post-error--switch create__post-error--url"></div>
            <input class="form__text-secondary" name="username" type="text"/>
        </div>

        <div class="form__wrap">
            <div class="form__label ">
                Hasło
            </div>
            <div class="form__error create__post-error--switch create__post-error--url"></div>
            <input class="form__text-secondary" name="password" type="text"/>
        </div>

        <div class="form__wrap">
            <div class="form__label ">
                Powtórz hasła
            </div>
            <div class="form__error create__post-error--switch create__post-error--url"></div>
            <input class="form__text-secondary" name="password_repeat" type="text"/>
        </div>

        <input class="button-primary button--full-width" name="create-post" type="submit" value="Założ konto">
    </form>

</div>
